{
    "extends": "@tsconfig/react-native/tsconfig.json",
    "compilerOptions": {
        "target": "esnext",
        "moduleResolution": "node",
        "jsx": "react-native",
        "allowJs": true,
        "strict": true,
        "module": "esnext",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "isolatedModules": true,
        "skipLibCheck": true
      },
      "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js"
      ]
}

